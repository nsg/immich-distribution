#!/bin/bash

# Add this file to ignore the checks in this hook
[ -e "$SNAP_COMMON/no-pre-refresh-hook" ] && exit 0

. $SNAP/bin/load-env

# Save the current version and revision as snap configuration keys
snapctl set previous.version="$SNAP_VERSION" 2>/dev/null || true
snapctl set previous.revision="$SNAP_REVISION" 2>/dev/null || true

exit 0
