#!/bin/bash

LD_LIBRARY_PATH_FRAGMENT="
    $SNAP/usr/local/pgsql/lib
    $SNAP/usr/lib/x86_64-linux-gnu/pulseaudio
    $SNAP/usr/lib/x86_64-linux-gnu/libfswatch
    $SNAP/usr/local/lib/x86_64-linux-gnu
    $SNAP/usr/local/lib
    $SNAP/usr/lib
"

for LDP in $LD_LIBRARY_PATH_FRAGMENT; do
    if [ -d $LDP ]; then
        export LD_LIBRARY_PATH="$LDP:$LD_LIBRARY_PATH"
    fi
done

$SNAP/usr/src/app/node_modules/sharp/build/Release/sharp-linux-x64.node
